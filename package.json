{
  "name": "darmstadt-2016",
  "version": "0.0.1",
  "description": "Demographic data for the 2016 edition of the Darmstadt Summer Courses",
  "repository": "delucis/darmstadt-2016",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run html:build & npm run ico:build & npm run css:build & npm run js:build & npm run data:build",
    "prewatch": "npm run build",
    "watch": "npm run html:watch & npm run ico:watch & npm run css:watch & npm run js:watch & npm run data:watch",
    "clean": "npm run html:clean & npm run ico:clean & npm run css:clean & npm run js:clean & npm run data:clean",
    "dev": "npm run watch & http-server dist -a localhost",
    "html:build": "cpy '**/*.html' '../dist/' --cwd=src --parents",
    "html:watch": "nodemon -e html --ignore dist/ -x \"npm run html:build\"",
    "html:clean": "rimraf dist/**/*.html",
    "ico:build": "cpy '**/*.ico' '../dist/' --cwd=src --parents",
    "ico:watch": "nodemon -e ico --ignore dist/ -x \"npm run ico:build\"",
    "ico:clean": "rimraf dist/**/*.ico",
    "js:build": "mkdirp dist/js && browserify src/js/main.js > dist/js/main.js",
    "js:watch": "mkdirp dist/js && watchify src/js/main.js -o dist/js/main.js",
    "js:clean": "rimraf dist/js",
    "css:build": "node-sass --include-path scss --output-style compressed src/scss/main.scss dist/css/main.css",
    "css:watch": "node-sass --include-path scss --output-style compressed src/scss/main.scss dist/css/main.css -w",
    "css:clean": "rimraf dist/css",
    "predata:build": "npm run data:clean",
    "data:build": "npm run yaml:build && npm run json:build",
    "data:watch": "nodemon -e yml -x \"npm run data:build\"",
    "data:clean": "rimraf dist/json dist/merged-data.json",
    "yaml:build": "./bin/convert-yaml.sh",
    "postyaml:build": "jsonlint-cli dist/json/*.json",
    "json:build": "./bin/merge-json.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Chris Swithinbank <swithinbank@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "browserify": "^13.1.0",
    "cpy-cli": "git+https://github.com/chimon2000/cpy-cli.git",
    "d3": "^4.2.0",
    "json-merge": "^1.2.0",
    "json_merger": "^1.1.0",
    "jsonlint-cli": "^1.0.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "rimraf": "^2.5.4",
    "watchify": "^3.7.0",
    "yamljs": "^0.2.8"
  },
  "devDependencies": {
    "http-server": "^0.9.0"
  }
}
